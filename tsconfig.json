{
  "compilerOptions": {
    "target": "ES6",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "experimentalDecorators": true,
    "noImplicitOverride": true,
    "sourceMap": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true
  },
  "exclude": [
    "dist",
    "node_modules"
  ]
}